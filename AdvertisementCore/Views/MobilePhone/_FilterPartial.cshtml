@using AdvertisementCore.Models
@model List<MobilePhone>
@{
    int integer = 0;


}


@for (var i = 0; i < Model.Count(); i++)
{
    integer = i;
    var blogApplication = Model.ElementAt(i);

    <div class="blog-item blog-item-listing">
        <div class="blog-img">
            <a href="@Url.Action("Index", "MobilePhone", new {  })">
                <img src="@blogApplication.Image)">
            </a>
        </div>
        <div class="d-flex justify-content-between">
            <div class="blog-date">
               @blogApplication.Price
            </div>
            <h3 class="view-count view-count-blog"><img src="~/images/eye icon.svg" alt="Alternate Text" /> </h3>
        </div>

        <div class="blog-item-title">
            <a href="@Url.Action("Index", "MobilePhone", new { })">@Html.Raw(blogApplication.Name)</a>
        </div>
    </div>
}
